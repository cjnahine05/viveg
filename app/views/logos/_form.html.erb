<%= render 'layouts/admin_nav' %>
<%= form_for(@logo, :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
  <% if @logo.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@logo.errors.count, "error") %> prohibited this logo from being saved:</h4>

      <ul>
      <% @logo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>
    <div class="form-group">
      <%= f.label :image ,'Logo', :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.file_field :image, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :status ,'Status', :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.check_box :status, :style => "width: 20px; height: 20px;", :class => "form-control" %>
      </div>
    </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
