<%= render 'layouts/admin_nav' %>
<div class="page-header">
  <%= link_to all_pages_path(:magazine_id=> @magazine.id), :class => 'btn btn-default' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Back
  <% end %>

  <h1>Move Page</h1><span style="color: red;font-size: 17px;">"This page belongs to Magazine <b><%= @magazine.name %></b>"</span>

</div>
<%= form_for @pages, :html => { :class => "form-horizontal", :role => "form" } do |f| %>
    <div class="form-group">
      <%= f.label 'Select Magazine', :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.collection_select :magazine_id,  Magazine.all, :id, :name,:required => true, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label 'Page Number', :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.number_field :page_number, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group hidden">
      <%= f.label :image ,'Page', :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.file_field :image, :class => "form-control" %>

      </div>
    </div>
    <div class="form-group">
      <%= f.label :status ,'Status', :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.check_box :status, :style => "width: 20px; height: 20px;", :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Move' , :class => "btn btn-primary" %>
      </div>
    </div>
<% end %>

