<%= render 'layouts/admin_nav' %>
<div class="page-header">
  <%= link_to pages_path(:magazine_id=> @magazine.id), :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_page_path(@page), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show page</h1>
</div>

<dl class="dl-horizontal">
  <dt>Magazines:</dt>
  <dd><%= @page.magazine_id %></dd>

  <dt>Page number:</dt>
  <dd><%= @page.page_number %></dd>

  <dt>Image:</dt>
  <dd class="thumbnail"><%= image_tag(@page.image_url) if @page.image? %></dd>

</dl>
