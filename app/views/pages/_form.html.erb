<%= render 'layouts/admin_nav' %>
<%= form_for(@page, :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
  <% if @page.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h4>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :magazine_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
          <%= f.collection_select :magazine_id,  Magazine.all.where(:id => params[:magazine_id]), :id, :name,:required => true, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :page_number, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :page_number, :class => "form-control" %>
    </div>
  </div>
    <div class="form-group">
      <%= f.label :image ,'Page', :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.file_field :image, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :status ,'Status', :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.check_box :status, :style => "width: 20px; height: 20px;", :class => "form-control" %>
      </div>
    </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
