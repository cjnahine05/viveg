<div class="page-header">
  <%= link_to splashscreens_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_splashscreen_path(@splashscreen), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show splashscreen</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @splashscreen.name %></dd>

  <dt>Video:</dt>
  <dd><%= @splashscreen.video %></dd>

</dl>
