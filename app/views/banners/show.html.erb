<%= render 'layouts/admin_nav' %>
<div class="page-header">
  <%= link_to banners_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_banner_path(@banner), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show banner</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @banner.name %></dd>

  <dt>Image:</dt>
  <dd class="thumbnail"><%=image_tag @banner.image %></dd>

</dl>
