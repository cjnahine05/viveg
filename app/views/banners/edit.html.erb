<div class="page-header">
  <%= link_to banners_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>

  <h1>Editing banner</h1>
</div>

<%= render 'layouts/admin_nav' %>
<%= form_for(@banner, :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
    <% if @banner.errors.any? %>
        <div class="alert alert-danger alert-dismissable" role="alert">
          <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4><%= pluralize(@banner.errors.count, "error") %> prohibited this banner from being saved:</h4>

          <ul>
            <% @banner.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :image ,'Cover Page', :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.file_field :image, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :start_date ,'Start Date', :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.datetime_select :start_date, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :end_date ,'End Date', :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.datetime_select :end_date,  :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :site_link ,'Banner Site', :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :site_link,  :class => "form-control" , :placeholder => "https://" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :status ,'Status', :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.check_box :status, :style => "width: 20px; height: 20px;", :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= link_to 'Cancel', banners_path,:class => "btn btn-default" %>
        <%= f.submit :class => "btn btn-primary" %>

      </div>
    </div>



<% end %>

