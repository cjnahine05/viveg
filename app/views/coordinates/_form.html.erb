<%= render 'layouts/admin_nav' %>
<%= form_for(@coordinate , :html => {:class => "form-horizontal"}) do |f| %>
    <% if @coordinate.errors.any? %>
        <div class="alert alert-danger alert-dismissable" role="alert">
          <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4><%= pluralize(@coordinate.errors.count, "error") %> prohibited this coordinate from being saved:</h4>

          <ul>
            <% @coordinate.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group hidden">
      <%= f.label :page_id, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.collection_select :page_id, Page.all.where(:id => params[:page_id]), :id, :id, :required => true, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :product_name, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :product_name , :class => "form-control"   %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label 'Product ID', :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :product_id, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :site_link, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :site_link, :class => "form-control" , :value => "https://"  %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :barcode, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :barcode, :class => "form-control"%>
      </div>
    </div>


    <div class="form-group">
      <%= f.label :coordinates, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :coordinates, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit :class => "btn btn-primary" %>
      </div>
    </div>
<% end %>

